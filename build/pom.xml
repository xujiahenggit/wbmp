<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>wbmp</artifactId>
        <groupId>com.bank</groupId>
        <version>1.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>build</artifactId>
<!--    <packaging>jar</packaging>-->
    <packaging>war</packaging>

    <dependencies>
        <dependency>
            <groupId>com.bank</groupId>
            <artifactId>core</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.bank</groupId>
            <artifactId>auth</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.bank</groupId>
            <artifactId>user</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.bank</groupId>
            <artifactId>role</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.bank</groupId>
            <artifactId>manage</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.bank</groupId>
            <artifactId>manage-public</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.bank</groupId>
            <artifactId>service-quartz</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.bank</groupId>
            <artifactId>service-log</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.bank</groupId>
            <artifactId>message</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.bank</groupId>
            <artifactId>PAD</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.bank</groupId>
            <artifactId>icop</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.bank</groupId>
            <artifactId>esb</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>wbmp-server</finalName>
        <!-- Spring Boot jar启动，没有主清单属性问题 -->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- 没有web.xml文件的情况下构建WAR -->
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.0.0</version>
            </plugin>
        </plugins>
    </build>

</project>